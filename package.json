{
  "name": "quickshot",
  "version": "1.1.0",
  "description": "A screenshot tool",
  "main": "src/main.js",
  "scripts": {
    "start": "electron . --dev",
    "build": "electron-builder --win",
    "ship": "electron-builder --win --ia32 --x64 -p always",
    "minify-and-build": "node build/build.js",
    "rebuild": "./node_modules/.bin/electron-rebuild",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "Quickshot",
    "quick",
    "screenshot",
    "tool",
    "concept"
  ],
  "author": "Thomas Cardon",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^8.2.0",
    "electron-builder": "^22.4.1",
    "minify": "^5.1.1"
  },
  "dependencies": {
    "a-capsule": "^3.0.0",
    "electron-updater": "^4.2.5",
    "sharp": "^0.25.2"
  },
  "repository": "https://github.com/Ryzzzen/quickshot",
  "build": {
    "appId": "fr.ryzzzen.quickshot",
    "productName": "Quickshot",
    "copyright": "Copyright Â© 2020 Thomas Cardon",
    "files": [
      "**/*",
      "build/icon.*",
      "!screenshots/*",
      "!*.md",
      "!*.yml",
      "!docs/*"
    ],
    "nsis": {
      "license": "LICENSE.md"
    }
  }
}
